{
  "name": "EduHub Development",
  "image": "mcr.microsoft.com/vscode/devcontainers/universal:linux",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "github-cli": "latest"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "ms-azuretools.vscode-docker",
        "ms-vscode.vscode-typescript-next",
        "graphql.vscode-graphql"
      ]
    }
  },
  "forwardPorts": [5000, 5001, 8080, 28080],
  "postCreateCommand": "sudo apt-get update && sudo apt-get install -y docker-compose && yarn install && docker-compose up -d",
  "remoteUser": "vscode"
}
